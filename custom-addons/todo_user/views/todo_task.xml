<?xml version="1.0" encoding="UTF-8"?>
<odoo>


<record id="view_form_todo_task_inherited" model="ir.ui.view">
    <field name="name">view.form.todo.task inherited</field>
    <field name="model">todo.task</field>
    <field name="inherit_id" ref="todo_app.view_form_todo_task" />
    <field name="arch" type="xml">

        <field name="is_done" position="before">
            <field name="date_deadline"/>
        </field>
        <field name="name" position="after">
            <field name="user_id"/>
        </field> 

        <sheet position="after">
            <div class="oe_chatter"> 
                <field name="message_follower_ids" widget="mail_followers" />
                <field name="message_ids" widget="mail_thread" />
            </div>
        </sheet>



    </field>
</record>

    

    <record id="view_tree_todo_task_inherited" model="ir.ui.view">
        <field name="name">view.tree.todo.task inherited</field>
        <field name="model">todo.task</field>
        <field name="inherit_id" ref="todo_app.view_tree_todo_task" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="date_deadline"/>
                <field name="user_id"/>
            </xpath>
        </field>
    </record>
    

 
    <record id="view_filter_todo_task_inherited" model="ir.ui.view">
        <field name="name">view.filter.todo.task inherited</field>
        <field name="model">todo.task</field>

        <field name="inherit_id" ref="todo_app.view_filter_todo_task" />

        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="after">
                <field name="user_id" />
                <filter name="filter_my_tasks" string="My Task" 
                domain="[('user_id', 'in', [uid,False ])]" />
                
                <filter string="Not Assignen"
                    name="filter_not_assigned"
                    domain="[('user_id','=',False)]" />
                   
            </xpath>

        </field>
    </record>
  

</odoo>
